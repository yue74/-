class Solution {
public:
    bool evaluateTree(TreeNode* root) {
        if (root == NULL) {
            return false;
        }
        if (root->val == 0 || root->val == 1) {
            return root->val == 1;
        }
        if (root->val == 2) {
            return evaluateTree(root->left) || evaluateTree(root->right);
        }
        return evaluateTree(root->left) && evaluateTree(root->right);
    }
};
